{
    "manifest_version": 2,
    "name": "Auto-Post for Twitter",
    "description": "Schedule posts for Twitter and Instagram",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "identity",
        "storage",
        "https://api.twitter.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"
    },
    "content_scripts" :[
        {
            "matches": ["https://twitter.com/*"],
            "js": ["content.js"]
        }
    ],
    "oauth2": {
        "client_id": "YOUR_TWITTER_CLIENT_ID",
        "scopes": [
            "read",
            "write"
        ]
    }
}