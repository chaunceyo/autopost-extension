{
    "manifest_version": 3,
    "name": "Auto-Post for Twitter",
    "description": "Schedule posts tweets from Chrome",
    "version": "1.0",
    "permissions": [
        "tabs",
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://api.twitter.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts" :[
        {
            "matches": ["https://twitter.com/*"],
            "js": ["content.js"]
        }
    ]
}